<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="action_account_payments" model="ir.actions.act_window">
        <field name="name">Imported Payments</field>
        <field name="res_model">account.payment</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field
            name="domain"
        >[('state', '=', 'draft'), ('is_imported','=', True)]</field>
        <field name="view_id" ref="account.view_account_payment_tree" />
    </record>

    <record id="view_account_payment_search" model="ir.ui.view">
        <field name="name">account.payment.search</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_search" />
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='reconciled']" position="after">
                <separator />
                <filter
                    string="Imported"
                    domain="[('is_imported','=', True)]"
                    name='imported'
                />
            </xpath>
        </field>
    </record>

    <menuitem
        action="action_account_payments"
        name="To Processed Imported Payments"
        id="menu_imported_account_payment"
        parent="account_payment_import_sbt.payment_import_menu"
        sequence="30"
    />

</odoo>

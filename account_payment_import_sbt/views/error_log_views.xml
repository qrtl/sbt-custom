<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view" id="import_error_log_form">
        <field name="name">error.log.form</field>
        <field name="model">error.log</field>
        <field name="inherit_id" ref="base_import_log.import_error_log_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='log_line_ids']//field[@name='row_no']"
                position="after"
            >
                <field name="order_number" />
                <field name="invoice_number" />
                <field name="partner_ref" />
                <field name="invoice_amount" />
                <field name="total_amount" />
                <field name="journal" />
            </xpath>
            <xpath expr="//field[@name='log_line_ids']/.." position="attributes">
                <attribute
                    name="attrs"
                >{'invisible': [('log_line_ids', '=', [])]}</attribute>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page
                    string='Warnings'
                    attrs="{'invisible': [('warning_log_line_ids', '=', [])]}"
                >
                    <field name="warning_log_line_ids">
                        <tree>
                            <field name="order_number" />
                            <field name="invoice_number" />
                            <field name="partner_ref" />
                            <field name="invoice_amount" />
                            <field name="total_amount" />
                            <field name="error_message" />
                        </tree>
                    </field>
                </page>
                 <page
                    string='Imported Payments'
                    attrs="{'invisible': [('payment_ids', '=', [])]}"
                >
                    <field name="payment_ids" />
                </page>
            </xpath>
        </field>
    </record>

</odoo>

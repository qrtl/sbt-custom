<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_account_payment_import" model="ir.ui.view">
        <field name="name">Payment CSV File</field>
        <field name="model">account.payment.import</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="import_type" required="1" />
                            <field name="file_name" invisible="1" />
                            <field
                                name="import_file"
                                widget="binary"
                                filename="file_name"
                            />
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button
                        string="Import"
                        name="confirm_import_payment"
                        type="object"
                        class="btn-primary"
                    />
                    <button string="Cancel" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record id="open_payment_import_popup" model="ir.actions.act_window">
        <field name="name">Payment CSV File</field>
        <field name="res_model">account.payment.import</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_account_payment_import" />
        <field name="target">new</field>
        <field name="context">{}</field>
    </record>

    <menuitem
        id="payment_import_menu"
        name="Payment Data Reconcile"
        parent="account_accountant.menu_accounting"
        sequence="21"
    />
    <menuitem
        id="payment_import_wizard_menu"
        name="Payment Import"
        parent="account_payment_import_sbt.payment_import_menu"
        action="open_payment_import_popup"
        sequence="1"
    />
    <menuitem
        id="payment_import_log_menu"
        name="Payment Import Log"
        parent="account_payment_import_sbt.payment_import_menu"
        action="base_import_log.error_log_action"
        sequence="2"
    />
</odoo>
